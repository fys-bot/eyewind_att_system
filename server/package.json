{
  "name": "attendance-rule-server",
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "migrate": "ts-node node_modules/.bin/knex migrate:latest --knexfile knexfile.ts",
    "migrate:rollback": "ts-node node_modules/.bin/knex migrate:rollback --knexfile knexfile.ts",
    "seed": "ts-node node_modules/.bin/knex seed:run --knexfile knexfile.ts"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "knex": "^3.1.0",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.14.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
}
